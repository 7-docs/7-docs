{
  "name": "@7-docs/edge",
  "version": "0.3.2",
  "description": "Dependency-free package for 7-docs to query your content from anywhere JavaScript can run",
  "homepage": "https://github.com/7-docs/7-docs",
  "bugs": "https://github.com/7-docs/7-docs/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/7-docs/7-docs.git",
    "directory": "packages/edge"
  },
  "license": "ISC",
  "author": {
    "name": "Lars Kappert",
    "email": "lars@webpro.nl"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "remark README.md -o",
    "lint": "eslint src",
    "release": "release-it"
  },
  "remarkConfig": {
    "plugins": [
      "preset-webpro"
    ]
  },
  "dependencies": {
    "@7-docs/shared": "0.3.2"
  },
  "devDependencies": {
    "@pinecone-database/pinecone": "^0.1.6",
    "@supabase/supabase-js": "^2.21.0",
    "openai": "3.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": false,
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "package.json",
          "path": "dependencies.@7-docs/shared"
        }
      }
    }
  }
}
