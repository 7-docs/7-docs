{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/edge"
    },
    {
      "path": "./packages/cli"
    }
  ]
}
