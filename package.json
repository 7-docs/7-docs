{
  "name": "7-docs",
  "version": "0.1.6",
  "description": "Build a knowledge base and ask it questions through ChatGPT",
  "keywords": [
    "docs",
    "documentation",
    "kb",
    "markdown",
    "vector",
    "database",
    "embedding",
    "chatgpt",
    "openai",
    "pinecone",
    "supabase"
  ],
  "homepage": "https://github.com/7-docs/7-docs",
  "bugs": "https://github.com/7-docs/7-docs/issues",
  "repository": "github:7-docs/7-docs",
  "license": "ISC",
  "author": {
    "name": "Lars Kappert",
    "email": "lars@webpro.nl"
  },
  "type": "module",
  "bin": {
    "7d": "./index.js"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/shared",
    "packages/edge",
    "packages/cli"
  ],
  "scripts": {
    "prebuild": "node ./rm-dist.js",
    "build": "tsc --build",
    "format": "remark README.md -o",
    "knip": "knip",
    "prepublishOnly": "npm run build",
    "release": "npm run release --workspaces && release-it",
    "watch": "tsc --build --watch"
  },
  "remarkConfig": {
    "plugins": [
      "preset-webpro"
    ]
  },
  "dependencies": {
    "@7-docs/cli": "0.1.6"
  },
  "devDependencies": {
    "@release-it/bumper": "^4.0.2",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "fast-glob": "^3.2.12",
    "knip": "^2.10.4",
    "release-it": "^15.10.1",
    "remark-cli": "^11.0.0",
    "remark-preset-webpro": "^0.0.2",
    "typescript": "^5.0.3"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "comments": {
        "submit": true
      }
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "package.json",
          "path": [
            "dependencies.@7-docs/cli"
          ]
        }
      }
    }
  }
}
